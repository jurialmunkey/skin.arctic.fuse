                                <onclick condition="String.IsEqual(Window(1105).Property(SearchDiscover.PersonSearch),People)">ClearProperty(SearchDiscover.PeopleID,1105)</onclick>
                                <onclick>Close</onclick>
                                <ondown>SetFocus(8000,0,absolute)</ondown>
