                <onright condition="[!Container.HasNext | String.IsEqual(ListItem.SortLetter,Z)]">Action(prevletter)</onright>
                <onright condition="[!Container.HasNext | String.IsEqual(ListItem.SortLetter,Z)]">Action(prevletter)</onright>
