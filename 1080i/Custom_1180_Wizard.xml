                            <right>310</right>

                            <control type="list">
                                <width>40%</width>
                                <left>60</left>
                                <orientation>vertical</orientation>
                                <itemlayout height="40">
                                    <include content="Layout_Wizard_Checklist">
                                        <param name="icon">special://skin/extras/icons/circle-check.png</param>
