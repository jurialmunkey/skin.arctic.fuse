                            <content>

                                <!-- Step 01: Widgets -->
                                <item>
                                    <label>$LOCALIZE[31083]</label>
                                    <icon>special://skin/extras/screenshots/widgets/Combined.jpg</icon>
                                    <visible>String.IsEmpty(Window(Home).Property(WizardStep))</visible>
                                    <onclick>RunScript(script.skinvariables,"run_executebuiltin=special://skin/shortcuts/builtins/skinvariables-wizardcategories.json",use_rules,category=SetBool,combined=SetBool,hidemenu=Always,compound=Reset,expanded=Reset,shortcut=default_home,position=0)</onclick>
