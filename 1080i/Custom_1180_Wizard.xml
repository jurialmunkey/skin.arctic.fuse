                                <item>
                                    <label>$LOCALIZE[31242]</label>
                                    <icon>special://skin/extras/screenshots/themes/Slate.jpg</icon>
                                    <property name="selected">$VAR[Exp_Var_ColourPreset_BlueSlate]</property>
