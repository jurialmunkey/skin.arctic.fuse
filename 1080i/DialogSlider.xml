<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">11</defaultcontrol>
    <include>Animation_SlideIn_Dialog</include>

    <controls>

        <control type="image">
            <top>-200</top>
            <height>600</height>
            <texture border="0,0,0,400" colordiffuse="panel_bg_70" flipy="true">common/dim-thick-bottom-full.png</texture>
        </control>

        <control type="group">
            <top>40</top>
            <height>200</height>
            <width>960</width>
            <centerleft>50%</centerleft>
            <control type="group">
                <include>Dialog_Background_Blur</include>
                <control type="image">
                    <texture colordiffuse="panel_fg_12" border="20">common/dialog.png</texture>
                </control>
            </control>
            <control type="group">
                <left>40</left>
                <right>40</right>
                <control type="group">
                    <height>12</height>
                    <centerbottom>60</centerbottom>
                    <!-- Left Side Marker -->
                    <control type="image">
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                        <width>2</width>
                        <height>8</height>
                        <centerleft>12</centerleft>
                        <top>-8</top>
                    </control>
                    <control type="image">
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                        <width>2</width>
                        <height>8</height>
                        <centerleft>12</centerleft>
                        <bottom>-8</bottom>
                    </control>
                    <!-- Left Center Marker -->
                    <control type="image">
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                        <width>2</width>
                        <height>8</height>
                        <centerleft>25%</centerleft>
                        <top>-8</top>
                    </control>
                    <control type="image">
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                        <width>2</width>
                        <height>8</height>
                        <centerleft>25%</centerleft>
                        <bottom>-8</bottom>
                    </control>
                    <!-- Center Marker -->
                    <control type="image">
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                        <width>2</width>
                        <height>12</height>
                        <centerleft>50%</centerleft>
                        <top>-12</top>
                    </control>
                    <control type="image">
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                        <width>2</width>
                        <height>12</height>
                        <centerleft>50%</centerleft>
                        <bottom>-12</bottom>
                    </control>
                    <!-- Right Center Marker -->
                    <control type="image">
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                        <width>2</width>
                        <height>8</height>
                        <centerright>25%</centerright>
                        <top>-8</top>
                    </control>
                    <control type="image">
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                        <width>2</width>
                        <height>8</height>
                        <centerright>25%</centerright>
                        <bottom>-8</bottom>
                    </control>
                    <!-- Right Side Marker -->
                    <control type="image">
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                        <width>2</width>
                        <height>8</height>
                        <centerright>12</centerright>
                        <top>-8</top>
                    </control>
                    <control type="image">
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                        <width>2</width>
                        <height>8</height>
                        <centerright>12</centerright>
                        <bottom>-8</bottom>
                    </control>
                    <!-- <control type="image">
                        <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                        <height>1</height>
                        <centertop>50%</centertop>
                    </control> -->
                    <control type="slider" id="11">
                        <texturesliderbar colordiffuse="dialog_fg_12" border="6">slider/slider_bg.png</texturesliderbar>
                        <textureslidernib colordiffuse="dialog_fg_30" border="6">slider/slider_nib.png</textureslidernib>
                        <textureslidernibfocus colordiffuse="$VAR[ColorHighlight]" border="6">slider/slider_nib.png</textureslidernibfocus>
                        <ondown>Close</ondown>
                        <onup>Close</onup>
                    </control>
                </control>

                <!-- <control type="image">
                    <texture colordiffuse="dialog_fg_12">common/white.png</texture>
