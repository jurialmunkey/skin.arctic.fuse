                <control type="image">
                    <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                    <height>1</height>
                    <bottom>40</bottom>
                </control> -->

                <control type="group">
                    <top>40</top>
                    <height>40</height>
                    <control type="label" id="10">
                        <font>font_midi_black</font>
                        <align>left</align>
                        <textcolor>dialog_fg_90</textcolor>
                    </control>
                    <control type="label" id="12">
                        <font>font_main</font>
                        <align>right</align>
                        <textcolor>dialog_fg_90</textcolor>
                    </control>
                </control>
            </control>
        </control>

    </controls>
</window>
