<?xml version="1.0" encoding="UTF-8"?>
<window>
    <onunload>ClearProperty(DialogSettings.Style,home)</onunload>
    <controls>

        <include content="Dialog_Overlay_Side">
            <include>Animation_Right_Delay</include>
            <visible>!Window.IsVisible(DialogSlider.xml)</visible>
            <include condition="String.IsEqual(Window(Home).Property(DialogSettings.Style),mediafilter)">Dimension_DialogSideMenu</include>
            <include condition="!String.IsEqual(Window(Home).Property(DialogSettings.Style),mediafilter)">Dimension_DialogWideMenu</include>
            <include content="Dialog_Head">
                <param name="id">2</param>
            </include>
            <include content="Dialog_Body">
                <include content="Dialog_Body_Grouplist">
                    <param name="id">5</param>
                    <onleft>Close</onleft>
                    <onright>61</onright>
                    <pagecontrol>61</pagecontrol>
                </include>

                <include content="Dialog_Scrollbar">
                    <param name="id">61</param>
                    <onright>9000</onright>
                    <onleft>5</onleft>
                </include>

                <include content="Dialog_Side_Grouplist">
                    <param name="id">9000</param>
                    <onright>noop</onright>
                    <onleft>5</onleft>
                    <include content="Dialog_Side_Button">
                        <param name="id">01</param>
                        <param name="label">$INFO[Control.GetLabel(28)]</param>
                        <param name="icon">special://skin/extras/icons/circle-check.png</param>
                        <param name="visible">Control.IsEnabled(28) + Control.IsVisible(28)</param>
                        <onclick>SendClick(28)</onclick>
                    </include>
                    <include content="Dialog_Side_Button">
                        <param name="id">02</param>
                        <param name="label">$LOCALIZE[15067]</param>
                        <param name="icon">special://skin/extras/icons/circle-xmark.png</param>
                        <param name="visible">Control.IsEnabled(29) + Control.IsVisible(29)</param>
                        <onclick>SendClick(29)</onclick>
                    </include>
                    <include content="Dialog_Side_Button">
                        <param name="id">03</param>
                        <param name="label">$INFO[Control.GetLabel(30)]</param>
                        <param name="icon">special://skin/extras/icons/triangle-exclamation.png</param>
                        <param name="visible">Control.IsEnabled(30) + Control.IsVisible(30)</param>
                        <onclick>SendClick(30)</onclick>
                    </include>

                    <include content="Dialog_Side_Button">
                        <param name="id">04</param>
                        <param name="label">$VAR[Label_Watched]</param>
                        <param name="icon">$VAR[Image_Watched]</param>
                        <param name="visible">Window.IsVisible(videos) + Window.IsVisible(mediafilter)</param>
                        <onclick>SendClick(videos,14)</onclick>
                    </include>

                    <include content="Dialog_Side_Button">
                        <param name="id">05</param>
                        <param name="label">$INFO[Container.SortMethod]</param>
                        <param name="icon">special://skin/extras/icons/sort.png</param>
                        <param name="visible">Window.IsMedia + Window.IsVisible(mediafilter)</param>
                        <onclick>SetProperty(DialogSelectType,Menu,Home)</onclick>
                        <onclick>SendClick(videos,3)</onclick>
                    </include>

                    <include content="Dialog_Side_Button">
                        <param name="id">06</param>
                        <param name="label">$VAR[Label_SortDirection]</param>
                        <param name="icon">$VAR[Image_SortDirection]</param>
                        <param name="visible">Window.IsMedia + Window.IsVisible(mediafilter)</param>
                        <onclick>SetProperty(DialogSelectType,Menu,Home)</onclick>
                        <onclick>SendClick(videos,4)</onclick>
                    </include>
                </include>
            </include>

        </include>

        <!-- Default Buttons -->
        <include content="Settings_Button">
            <param name="id">7</param>
            <param name="control">button</param>
            <param name="dialog">true</param>
            <description>Default Setting Button</description>
        </include>

        <include content="Settings_Button">
            <param name="id">8</param>
            <param name="control">radiobutton</param>
            <param name="dialog">true</param>
            <description>Default Setting Button</description>
        </include>

        <include content="Settings_Button">
            <param name="id">9</param>
            <param name="control">spincontrolex</param>
            <param name="dialog">true</param>
            <description>Default Setting Button</description>
        </include>

        <include content="Settings_Button">
            <param name="id">11</param>
            <param name="control">image</param>
            <param name="dialog">true</param>
            <description>Default Setting Button</description>
            <visible>false</visible>
        </include>

        <include content="Settings_Button">
            <param name="id">12</param>
            <param name="control">edit</param>
            <param name="dialog">true</param>
            <description>Default Setting Button</description>
        </include>

        <include content="Settings_Button">
            <param name="id">13</param>
            <param name="control">sliderex</param>
            <param name="dialog">true</param>
            <description>Default Setting Button</description>
        </include>

        <include content="Settings_Label">
            <param name="id">14</param>
            <param name="control">label</param>
            <param name="dialog">true</param>
            <description>Default Setting Label</description>
        </include>

        <!-- Hidden Buttons -->
        <include content="Object_Hidden_Button">
            <param name="id">28</param>
        </include>
        <include content="Object_Hidden_Button">
            <param name="id">29</param>
        </include>
        <include content="Object_Hidden_Button">
            <param name="id">30</param>
        </include>

        <!-- Hidden Control -->
        <include content="Object_Hidden_Button">
            <param name="id">8000</param>
            <onleft>Control.Message(52,movedown,10025)</onleft>
            <onright>Control.Message(52,moveup,10025)</onright>
            <ondown>Control.Message(52,moveup,10025)</ondown>
            <ondown>Control.Message(52,moveup,10025)</ondown>
            <ondown>Control.Message(52,moveup,10025)</ondown>
            <ondown>Control.Message(52,moveup,10025)</ondown>
            <onup>Control.Message(52,movedown,10025)</onup>
            <onup>Control.Message(52,movedown,10025)</onup>
            <onup>Control.Message(52,movedown,10025)</onup>
            <onup>Control.Message(52,movedown,10025)</onup>
            <onclick>SendClick(28)</onclick>
            <onback>5</onback>
        </include>
    </controls>
</window>
