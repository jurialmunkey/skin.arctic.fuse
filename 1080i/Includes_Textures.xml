<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="Texture_Shadow_20">
        <param name="colordiffuse">shadow_hard</param>
        <definition>
            <include content="Dimension_Padding"><param name="pad">-20</param></include>
            <bordersize>20</bordersize>
            <bordertexture border="32" colordiffuse="$PARAM[colordiffuse]">shadows/shadow-20.png</bordertexture>
        </definition>
    </include>

    <include name="Texture_Shadow_40">
        <param name="colordiffuse">shadow_hard</param>
        <definition>
            <include content="Dimension_Padding"><param name="pad">-40</param></include>
            <bordersize>40</bordersize>
            <bordertexture border="52" colordiffuse="$PARAM[colordiffuse]">shadows/shadow-40.png</bordertexture>
        </definition>
    </include>

    <include name="Texture_Shadow_80">
        <param name="colordiffuse">shadow_full</param>
        <definition>
            <include content="Dimension_Padding"><param name="pad">-80</param></include>
            <bordersize>80</bordersize>
            <bordertexture border="92" colordiffuse="$PARAM[colordiffuse]">shadows/shadow-80.png</bordertexture>
        </definition>
    </include>

    <include name="Texture_Shadow_Provider">
        <include content="Dimension_Padding"><param name="pad">-40</param></include>
        <bordersize>40</bordersize>
        <bordertexture colordiffuse="shadow_hard">shadows/circle_provider.png</bordertexture>
    </include>

    <include file="script-skinvariables-generator-textures-includes.xml" condition="!Skin.HasSetting(EnableMonochromeHighlight) + Skin.HasSetting(TextureMaker.Built)" />
    <include file="Includes_Textures_Native.xml" />

</includes>
