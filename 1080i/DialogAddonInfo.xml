<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <menucontrol>9000</menucontrol>
    <defaultcontrol>9000</defaultcontrol>
    <zorder>4</zorder>
    <controls>
        <include content="Object_Hidden_List">
            <param name="id">50</param>
            <orientation>vertical</orientation>
            <onright>9000</onright>
            <onleft>9000</onleft>
        </include>

        <control type="group">
            <include>Dimension_DialogFullMenu</include>
            <include>Animation_Right_Delay</include>
            <include content="Dialog_Dim_Side">
                <param name="slide_condition">ControlGroup(9000).HasFocus()</param>
            </include>

            <!-- Bottom Layer -->
            <include content="Dialog_Background_Side">
                <param name="dialog_size">Dimension_DialogFullMenu</param>
            </include>
            <!-- Side Buttons -->
            <include content="Dialog_Body">
                <include content="Dialog_Side_Grouplist">
                    <param name="id">9000</param>
                    <onright>noop</onright>
                    <onleft>50</onleft>
                    <include>Items_DialogAddonInfo_MenuBar</include>
                </include>
            </include>

            <include content="Dialog_Foreground_Side">
                <param name="dialog_size">Dimension_DialogFullMenu</param>
                <param name="slide_condition">ControlGroup(9000).HasFocus()</param>
                <param name="topline">true</param>
                <param name="subline">true</param>
                <param name="lines_right">440</param>

                <!-- Header -->
                <include content="Dialog_Head">
                    <param name="label">$INFO[ListItem.Label]</param>
                </include>

                <!-- Content -->
                <include content="Dialog_Body">
                    <include content="Dialog_Body_Group">
                        <include content="Dialog_Outline_InnerBox">
                            <width>400</width>
                            <right>20</right>
                            <top>-20</top>
                            <bottom>-20</bottom>
                            <control type="grouplist">
                                <orientation>vertical</orientation>
                                <itemgap>40</itemgap>
                                <control type="group">
                                    <height>0</height>
                                </control>
                                <include content="Dialog_Outline_Box">
                                    <width>320</width>
                                    <height>320</height>
                                    <centerleft>50%</centerleft>
                                    <control type="image">
                                        <texture background="true" diffuse="diffuse/square_w320_h320.png">$INFO[ListItem.Icon]</texture>
                                    </control>
                                </include>
                                <include content="Dialog_Outline_Box">
                                    <height>180</height>
                                    <width>320</width>
                                    <centerleft>50%</centerleft>
                                    <control type="image">
                                        <width>128</width>
                                        <height>128</height>
                                        <centertop>50%</centertop>
                                        <centerleft>50%</centerleft>
                                        <texture colordiffuse="main_fg_90">special://skin/extras/icons/image.png</texture>
                                    </control>
                                    <control type="image">
                                        <aspectratio scalediffuse="false">scale</aspectratio>
                                        <texture background="true" diffuse="diffuse/landscape_w320_h180.png">$INFO[ListItem.Art(fanart)]</texture>
                                    </control>
                                </include>
                                <include content="Dialog_Outline_Box">
                                    <height>180</height>
                                    <width>320</width>
                                    <centerleft>50%</centerleft>
                                    <control type="image">
                                        <width>128</width>
                                        <height>128</height>
                                        <centertop>50%</centertop>
                                        <centerleft>50%</centerleft>
                                        <texture colordiffuse="main_fg_90">special://skin/extras/icons/image.png</texture>
                                        <visible>String.IsEmpty(Container(50).ListItem.Icon)</visible>
                                    </control>
                                    <control type="image">
                                        <aspectratio scalediffuse="false">scale</aspectratio>
                                        <texture background="true" diffuse="diffuse/landscape_w320_h180.png">$INFO[Container(50).ListItem.Icon]</texture>
                                    </control>
                                    <include content="Object_SelectBox">
                                        <param name="indicator">false</param>
                                        <param name="focusbounce">true</param>
                                        <visible>Control.HasFocus(50)</visible>
                                    </include>
                                </include>
                            </control>
                        </include>

                        <control type="grouplist">
                            <top>20</top>
                            <bottom>20</bottom>
                            <right>460</right>
                            <left>20</left>
                            <orientation>vertical</orientation>
                            <control type="label">
                                <font>font_main_bold</font>
                                <height>40</height>
                                <textcolor>main_fg_90</textcolor>
                                <label>$LOCALIZE[20037]</label>
                            </control>
                            <control type="label">
                                <font>font_main_plot</font>
                                <height>40</height>
                                <label fallback="19055">$INFO[ListItem.AddonSummary]</label>
                            </control>
                            <control type="grouplist">
                                <top>20</top>
                                <left>-16</left>
                                <height>40</height>
                                <orientation>horizontal</orientation>
                                <itemgap>10</itemgap>
                                <control type="image">
                                    <left>8</left>
                                    <height>48</height>
                                    <width>48</width>
                                    <texture colordiffuse="main_fg_90">special://skin/extras/icons/id-card.png</texture>
                                    <centertop>50%</centertop>
                                </control>
                                <control type="label">
                                    <centertop>48%</centertop>
                                    <height>20</height>
                                    <label>$INFO[ListItem.AddonCreator]</label>
                                    <width>auto</width>
                                </control>
                                <control type="image">
                                    <left>8</left>
                                    <height>48</height>
                                    <width>48</width>
                                    <texture colordiffuse="main_fg_90">special://skin/extras/icons/tag.png</texture>
                                    <centertop>50%</centertop>
                                </control>
                                <control type="label">
                                    <centertop>48%</centertop>
                                    <height>20</height>
                                    <label>$INFO[ListItem.AddonType]</label>
                                    <width>auto</width>
                                </control>

                            </control>
                            <control type="grouplist">
                                <height>40</height>
                                <left>-16</left>
                                <orientation>horizontal</orientation>
                                <itemgap>10</itemgap>
                                <control type="image">
                                    <left>8</left>
                                    <height>48</height>
                                    <width>48</width>
                                    <texture colordiffuse="main_fg_90">special://skin/extras/icons/code-branch.png</texture>
                                    <centertop>50%</centertop>
                                </control>
                                <control type="label">
                                    <centertop>48%</centertop>
                                    <height>20</height>
                                    <label>$INFO[ListItem.AddonVersion,v,]</label>
                                    <width>auto</width>
                                </control>
                                <control type="image">
                                    <left>8</left>
                                    <height>48</height>
                                    <width>48</width>
                                    <texture colordiffuse="main_fg_90">special://skin/extras/icons/clock-rotate-left.png</texture>
                                    <centertop>50%</centertop>
                                </control>
                                <control type="label">
                                    <centertop>48%</centertop>
                                    <height>20</height>
                                    <label>$VAR[Label_AddonInfo_LastUpdated]</label>
                                    <width>auto</width>
                                </control>
                            </control>
                            <control type="label">
                                <top>20</top>
                                <font>font_main_bold</font>
                                <height>40</height>
                                <textcolor>main_fg_90</textcolor>
                                <label>$LOCALIZE[21821]</label>
                                <visible>!String.IsEmpty(ListItem.AddonDescription)</visible>
                            </control>
                            <control type="textbox">
                                <font>font_main</font>
                                <height>auto</height>
                                <label fallback="19055">$INFO[ListItem.AddonDescription]</label>
                                <visible>!String.IsEmpty(ListItem.AddonDescription)</visible>
                            </control>
                            <control type="label">
                                <top>20</top>
                                <font>font_main_bold</font>
                                <height>40</height>
                                <textcolor>main_fg_90</textcolor>
                                <label>$LOCALIZE[24052]</label>
                                <visible>!String.IsEmpty(ListItem.AddonDisclaimer)</visible>
                            </control>
                            <control type="textbox">
                                <font>font_main_plot</font>
                                <height>auto</height>
                                <label fallback="19055">$INFO[ListItem.AddonDisclaimer]</label>
                                <visible>!String.IsEmpty(ListItem.AddonDisclaimer)</visible>
                            </control>
                            <control type="label">
                                <top>20</top>
                                <font>font_main_bold</font>
                                <height>40</height>
                                <textcolor>main_fg_90</textcolor>
                                <label>$LOCALIZE[29916]</label>
                                <visible>!String.IsEmpty(ListItem.AddonNews)</visible>
                            </control>
                            <control type="textbox">
                                <font>font_main</font>
                                <height>auto</height>
                                <label fallback="19055">$INFO[ListItem.AddonNews]</label>
                                <visible>!String.IsEmpty(ListItem.AddonNews)</visible>
                            </control>
                        </control>
                    </include>
                </include>
            </include>

        </control>
    </controls>
</window>