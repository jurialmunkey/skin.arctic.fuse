    <include name="Transitions_List_Row_Animation">
        <param name="prefix">transition_poster</param>
        <definition>
            <animation type="Hidden" reversible="false">
                <effect type="slide" start="$PARAM[col]00" end="0" time="300" delay="$PARAM[prefix]_delay_v_$PARAM[col]" tween="cubic" easing="out" />
                <effect type="fade" start="0" end="100" time="300" delay="$PARAM[prefix]_delay_v_$PARAM[col]" tween="sine" easing="in" />
                <effect type="slide" time="600" />
            </animation>

            <animation type="Visible" reversible="false">
                <effect type="zoom" end="75" start="100" time="200" delay="$PARAM[prefix]_delay_h_$PARAM[col]" tween="quadratic" easing="out" center="auto" />
                <effect type="fade" end="0" start="100" time="200" delay="$PARAM[prefix]_delay_h_$PARAM[col]" tween="sine" easing="in" />
                <effect type="slide" time="0" />
            </animation>
        </definition>
    </include>

    <include name="Transitions_List_Row_Item">
        <param name="conditional_fade">true</param>
        <param name="transition_animation">true</param>
        <param name="selected">false</param>
        <definition>
            <include content="$PARAM[content]">
                <param name="icon">$VAR[$PARAM[icon_base_var]$PARAM[affix]_$PARAM[pos]]</param>
                <param name="item_w">$PARAM[item_w]</param>
                <param name="item_h">$PARAM[item_h]</param>
                <param name="affix">$PARAM[affix]_$PARAM[pos]</param>
                <param name="listitem">Container($PARAM[id]).ListItem($PARAM[pos])</param>
                <param name="id">$PARAM[id]</param>
                <param name="selected">$PARAM[selected]</param>

                <include content="Animation_ConditionalFade" condition="$PARAM[conditional_fade]">
                    <param name="condition">String.IsEmpty(Container($PARAM[id]).ListItemNoWrap($PARAM[pos]).CurrentItem)</param>
                </include>

                <include content="Transitions_List_Row_Animation" condition="$PARAM[transition_animation]">
                    <param name="col">$PARAM[pos]</param>
                </include>

                <left>$PARAM[prefix]_posx_$PARAM[pos]</left>

                <nested />
            </include>
        </definition>
    </include>

