            <animation type="Hidden" reversible="false">
                <effect type="slide" start="$PARAM[col]00" end="0" time="300" delay="$PARAM[prefix]_delay_v_$PARAM[col]" tween="cubic" easing="out" />
                <effect type="fade" start="0" end="100" time="300" delay="$PARAM[prefix]_delay_v_$PARAM[col]" tween="sine" easing="in" />
                <effect type="slide" time="600" />
            </animation>

            <animation type="Visible" reversible="false">
                <effect type="zoom" end="75" start="100" time="200" delay="$PARAM[prefix]_delay_h_$PARAM[col]" tween="quadratic" easing="out" center="auto" />
                <effect type="fade" end="0" start="100" time="200" delay="$PARAM[prefix]_delay_h_$PARAM[col]" tween="sine" easing="in" />
                <effect type="slide" time="0" />
            </animation>
        </definition>
    </include>

