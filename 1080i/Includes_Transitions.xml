    <include name="Transitions_Standard_Animation">
        <param name="visible_delay">0</param>
        <param name="hidden_delay">0</param>
        <param name="slide_x">0</param>
        <definition>
            <animation type="Visible" reversible="false">
                <effect type="slide" start="$PARAM[slide_x]" end="0" time="300" delay="$PARAM[visible_delay]" tween="cubic" easing="out" />
                <effect type="fade" start="0" end="100" time="300" delay="$PARAM[visible_delay]" tween="sine" easing="in" />
            </animation>

            <animation type="Hidden" reversible="false">
                <effect type="zoom" end="75" start="100" time="200" delay="$PARAM[hidden_delay]" tween="quadratic" easing="out" center="auto" />
                <effect type="fade" end="0" start="100" time="200" delay="$PARAM[hidden_delay]" tween="sine" easing="in" />
            </animation>
        </definition>
    </include>

    <include name="Transitions_List_Row_Animation">
        <param name="prefix">transition_poster</param>
