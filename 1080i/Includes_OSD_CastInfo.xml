<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="OSD_CastInfo_ExpandGroup">
        <control type="group">
            <height>400</height>
            <bottom>view_pad</bottom>
            <left>view_side</left>
            <right>view_pad</right>
            <nested />
        </control>
    </include>

    <include name="OSD_CastInfo_HintText">
        <control type="grouplist">
            <nested />
            <bottom>0</bottom>
            <height>40</height>
            <left>view_side</left>
            <right>view_pad</right>
            <orientation>horizontal</orientation>
            <align>left</align>
            <include>Animation_FadeIn_Delay</include>
            <control type="image">
                <left>-10</left>
                <texture flipy="true" colordiffuse="panel_fg_70">special://skin/extras/icons/angle-up.png</texture>
                <width>40</width>
                <height>40</height>
            </control>
            <control type="label">
                <left>10</left>
                <font>font_tiny</font>
                <textcolor>panel_fg_70</textcolor>
                <label>$PARAM[label]</label>
                <height>35</height>
                <width>auto</width>
            </control>
        </control>
    </include>

    <include name="OSD_List_Dimensions">
        <left>-x20</left>
        <right>-x08</right>
        <height>x40</height>
        <top>-94</top>
    </include>

    <include name="OSD_CastInfo_Details">
        <control type="group">
            <top>0</top>
            <control type="grouplist">
                <left>1190</left>
                <orientation>vertical</orientation>
                <itemgap>0</itemgap>
                <control type="group">
                    <height>75</height>
                    <control type="group">
                        <centertop>50%</centertop>
                        <height>x06</height>
                        <control type="group">
                            <height>x06</height>
                            <width>x06</width>
                            <include content="Object_Control">
                                <param name="control" value="image" />
                                <bordersize>2</bordersize>
                                <bordertexture colordiffuse="panel_fg_100">common/circle.png</bordertexture>
                                <texture colordiffuse="panel_bg">common/circle.png</texture>
                            </include>
                            <include content="Object_Control">
                                <param name="control" value="image" />
                                <bordersize>2</bordersize>
                                <aspectratio scalediffuse="false">scale</aspectratio>
                                <texture diffuse="common/circle.png" colordiffuse="panel_fg_100">$PARAM[icon]</texture>
                            </include>
                        </control>
                        <control type="group">
                            <left>x08</left>
                            <control type="label">
                                <label>$PARAM[mainlabel]</label>
                                <font>font_mini_bold</font>
                                <textcolor>panel_fg_100</textcolor>
                                <height>x03</height>
                            </control>
                            <control type="label">
                                <label>$PARAM[sublabel]</label>
                                <font>font_mini_plot</font>
                                <textcolor>panel_fg_70</textcolor>
                                <height>x03</height>
                                <top>x03</top>
                            </control>
                        </control>
                    </control>
                </control>
                <control type="textbox">
                    <top>20</top>
                    <label>$PARAM[plotlabel]</label>
                    <font>font_mini_plot</font>
                    <textcolor>panel_fg_70</textcolor>
                    <height>190</height>
                </control>
            </control>
        </control>
    </include>

</includes>