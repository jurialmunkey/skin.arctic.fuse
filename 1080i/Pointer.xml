<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="105">


    <controls>

        <include content="Object_MousePointer" condition="Skin.String(Mouse.PointerSize,32px) | String.IsEmpty(Skin.String(Mouse.PointerSize))">
            <param name="size">32</param>
            <param name="texture">mouse.png</param>
            <param name="colordiffuse">$VAR[ColorMousePointer]</param>
        </include>

        <include content="Object_MousePointer" condition="Skin.String(Mouse.PointerSize,48px)">
            <param name="size">48</param>
            <param name="texture">mouse-48.png</param>
            <param name="colordiffuse">$VAR[ColorMousePointer]</param>
        </include>

        <include content="Object_MousePointer" condition="Skin.String(Mouse.PointerSize,64px)">
            <param name="size">64</param>
            <param name="texture">mouse-64.png</param>
            <param name="colordiffuse">$VAR[ColorMousePointer]</param>
        </include>

    </controls>

</window>
