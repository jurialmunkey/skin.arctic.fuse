                <control type="group">
                    <left>$PARAM[channelwidth]</left>

                    <control type="group">
                        <left>20</left>
                        <right>-20</right>
                        <control type="group">
                            <control type="image">
                                <width>1</width>
                                <texture colordiffuse="main_fg_30">common/white.png</texture>
                                <bottom>-5</bottom>
                                <top>15</top>
                                <visible>!Skin.HasSetting(Views.UseHalfPVRGuide)</visible>
                            </control>
                            <control type="image">
                                <width>1</width>
                                <texture colordiffuse="main_fg_30">common/white.png</texture>
                                <bottom>10</bottom>
                                <top>15</top>
                                <visible>Skin.HasSetting(Views.UseHalfPVRGuide)</visible>
                            </control>
                            <control type="label">
                                <left>10</left>
                                <width>$PARAM[channelwidth]</width>
                                <align>left</align>
                                <aligny>center</aligny>
                                <font>font_tiny_bold</font>
                                <label>$LOCALIZE[19030]</label>
                                <textcolor>main_fg_70</textcolor>
                                <shadowcolor>main_bg_12</shadowcolor>
                            </control>
                        </control>

                        <control type="group">
                            <left>50%</left>
                            <control type="image">
                                <width>1</width>
                                <texture colordiffuse="main_fg_30">common/white.png</texture>
                                <bottom>-5</bottom>
                                <top>15</top>
                                <visible>!Skin.HasSetting(Views.UseHalfPVRGuide)</visible>
                            </control>
                            <control type="image">
                                <width>1</width>
                                <texture colordiffuse="main_fg_30">common/white.png</texture>
                                <bottom>10</bottom>
                                <top>15</top>
                                <visible>Skin.HasSetting(Views.UseHalfPVRGuide)</visible>
                            </control>
                            <control type="label">
                                <left>10</left>
                                <width>$PARAM[channelwidth]</width>
                                <align>left</align>
                                <aligny>center</aligny>
                                <font>font_tiny_bold</font>
                                <label>$LOCALIZE[19031]</label>
                                <textcolor>main_fg_70</textcolor>
                                <shadowcolor>main_bg_12</shadowcolor>
                            </control>
                        </control>

                    </control>
                </control>
            </control>

            <control type="fixedlist" id="$PARAM[id]">
                <onback>11</onback>
                <include content="Action_View_Movement_OnLeft"><param name="id">$PARAM[id]</param></include>
                <onright>332</onright>
                <top>60</top>
                <bottom>99</bottom>
                <left>-40</left>
                <orientation>vertical</orientation>
                <focusposition>$PARAM[focusposition]</focusposition>
                <movement>$PARAM[movement]</movement>
                <viewtype label="$PARAM[viewtype_label]">list</viewtype>
                <itemlayout height="$PARAM[channelheight]">
                    <include content="Layout_PVRChannel">
                        <param name="channelwidth">$PARAM[channelwidth]</param>
                        <param name="detailed">$PARAM[detailed]</param>
                    </include>
                </itemlayout>
                <focusedlayout height="$PARAM[channelheight]">
                    <control type="group">
                        <visible>[Control.HasFocus(11) | $EXP[Exp_HomeMenu_HasFocus] | Control.HasFocus(331) | ControlGroup(2800).HasFocus()]</visible>
                        <include content="Layout_PVRChannel">
                            <param name="channelwidth">$PARAM[channelwidth]</param>
                            <param name="detailed">$PARAM[detailed]</param>
                            <param name="selected">false</param>
                        </include>
                    </control>
                    <control type="group">
                        <visible>![Control.HasFocus(11) | $EXP[Exp_HomeMenu_HasFocus] | Control.HasFocus(331) | ControlGroup(2800).HasFocus()]</visible>
                        <include content="Layout_PVRChannel">
                            <param name="channelwidth">$PARAM[channelwidth]</param>
                            <param name="detailed">$PARAM[detailed]</param>
                            <param name="selected">true</param>
                        </include>
                    </control>
                </focusedlayout>
            </control>
        </definition>
    </include>

