    <include name="List_EPGGrid">
        <param name="channelheight">80</param>
        <param name="channelwidth">520</param>
        <param name="include_channels">Layout_PVRGuide_Channels</param>
        <param name="include_programs">Layout_PVRGuide_Programs</param>
        <definition>
            <control type="epggrid" id="$PARAM[id]">
                <nested />
                <scrolltime tween="quadratic">300</scrolltime>
                <timeblocks>24</timeblocks>
                <rulerunit>6</rulerunit>
                <rulerlayout height="80" width="480">
                    <control type="label" id="2">
                        <top>20</top>
                        <left>40</left>
                        <height>35</height>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>font_tiny_black</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>main_fg_70</textcolor>
						<!-- PVR008: remove visible tag -->
                        <!-- visible>String.Contains(ListItem.Label,:) | !Skin.HasSetting(Views.UseHalfPVRGuide)</visible -->
                    </control>
                </rulerlayout>
                <channellayout height="$PARAM[channelheight]" width="$PARAM[channelwidth]">
                    <include content="$PARAM[include_channels]">
                        <param name="detailed">$PARAM[detailed]</param>
                        <param name="item_h">$PARAM[channelheight]</param>
                    </include>
                </channellayout>
                <focusedchannellayout height="$PARAM[channelheight]" width="$PARAM[channelwidth]">
                    <include content="$PARAM[include_channels]">
                        <param name="selected">false</param>
                        <param name="detailed">$PARAM[detailed]</param>
                        <param name="item_h">$PARAM[channelheight]</param>
                        <visible>[ControlGroup(2800).HasFocus() | Control.HasFocus(11)]</visible>
                    </include>
                    <include content="$PARAM[include_channels]">
                        <param name="selected">true</param>
                        <param name="detailed">$PARAM[detailed]</param>
                        <param name="item_h">$PARAM[channelheight]</param>
                        <visible>![ControlGroup(2800).HasFocus() | Control.HasFocus(11)]</visible>
                    </include>
                </focusedchannellayout>
                <itemlayout height="$PARAM[channelheight]" width="480">
                    <include content="$PARAM[include_programs]">
                        <param name="detailed">$PARAM[detailed]</param>
                    </include>
                </itemlayout>
                <focusedlayout height="$PARAM[channelheight]" width="480">
                    <include content="$PARAM[include_programs]">
                        <param name="selected">false</param>
                        <param name="visible">[ControlGroup(2800).HasFocus() | Control.HasFocus(11)]</param>
                        <param name="detailed">$PARAM[detailed]</param>
                    </include>
                    <include content="$PARAM[include_programs]">
                        <param name="selected">true</param>
                        <param name="visible">![ControlGroup(2800).HasFocus() | Control.HasFocus(11)]</param>
                        <param name="detailed">$PARAM[detailed]</param>
                    </include>
                </focusedlayout>
            </control>
        </definition>
    </include>

