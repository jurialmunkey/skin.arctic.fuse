    <include name="List_Core">
        <param name="orientation">horizontal</param>
        <param name="control">list</param>
        <param name="id" />
        <param name="preloaditems">2</param>
        <param name="tween">quadratic</param>
        <param name="scrolltime">400</param>
        <param name="viewtype">list</param>
        <param name="offset_x">view_offx</param>
        <param name="offset_y">80</param>
        <param name="itemlayout_w" />
        <param name="itemlayout_h" />
        <param name="item_w" />
        <param name="item_h" />
        <param name="itemlayout_include" />
