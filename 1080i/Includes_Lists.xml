    <include name="List_ButtonMenu_Row">
        <param name="control">list</param>
        <param name="itemlayout_w">240</param>
        <param name="font">font_mini_bold</param>
        <param name="color_fo">main_fg_100</param>
        <param name="color_nf">main_fg_30</param>
        <param name="altfocus">false</param>
        <param name="offset_x">40</param>
        <param name="hidden_button">List_ButtonMenu_Row_HiddenButton_View</param>
        <param name="backing">false</param>
        <param name="label_fo">true</param>
        <param name="underline">false</param>
        <definition>
            <control type="$PARAM[control]" id="$PARAM[id]">
                <nested />
                <include content="$PARAM[hidden_button]_OnFocus">
                    <param name="id">$PARAM[id]</param>
                    <param name="container">Container($PARAM[id]).</param>
                    <param name="prefix">$PARAM[hidden_button_prefix]</param>
                    <param name="force_widget">$PARAM[hidden_button_force_widget]</param>
                </include>
                <orientation>horizontal</orientation>
                <scrolltime tween="quadratic">400</scrolltime>
                <itemlayout height="120" width="$PARAM[itemlayout_w]">
                    <control type="group">
                        <animation effect="fadediffuse" start="FFFFFFFF" end="FFFF0000" condition="String.IsEqual(ListItem.Property(disabled),True)">Conditional</animation>
                        <left>$PARAM[offset_x]</left>
                        <right>-$PARAM[offset_x]</right>
                        <control type="group">
                            <right>40</right>
                            <height>40</height>
                            <centertop>50%</centertop>
                            <control type="label">
                                <height>35</height>
                                <aligny>center</aligny>
                                <textoffsetx>0</textoffsetx>
                                <align>center</align>
                                <font>$PARAM[font]</font>
                                <textcolor>$PARAM[color_nf]</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout height="120" width="$PARAM[itemlayout_w]" condition="![Control.HasFocus($PARAM[id]) | $PARAM[altfocus]]">
                    <control type="group">
                        <animation effect="fadediffuse" start="FFFFFFFF" end="FFFF0000" condition="String.IsEqual(ListItem.Property(disabled),True)">Conditional</animation>
                        <left>$PARAM[offset_x]</left>
                        <right>-$PARAM[offset_x]</right>
                        <control type="group">
                            <right>40</right>
                            <height>40</height>
                            <centertop>50%</centertop>
                            <control type="label">
                                <height>35</height>
                                <aligny>center</aligny>
                                <textoffsetx>0</textoffsetx>
                                <align>center</align>
                                <font>$PARAM[font]</font>
                                <textcolor>$PARAM[color_fo]</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                                <visible>$PARAM[label_fo]</visible>
                            </control>
                            <control type="label">
                                <height>35</height>
                                <aligny>center</aligny>
                                <textoffsetx>0</textoffsetx>
                                <align>center</align>
                                <font>$PARAM[font]</font>
                                <textcolor>$PARAM[color_nf]</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                                <visible>![$PARAM[label_fo]]</visible>
                            </control>
                            <include content="Object_Control" condition="$PARAM[underline]">
                                <param name="control">image</param>
                                <width>80</width>
                                <bottom>-10</bottom>
                                <centerleft>50%</centerleft>
                                <include>Texture_Highlight_Scrollbar_H</include>
                                <height>scrollbar_w</height>
                            </include>
                        </control>
                    </control>
                </focusedlayout>
                <focusedlayout height="120" width="$PARAM[itemlayout_w]" condition="[Control.HasFocus($PARAM[id]) | $PARAM[altfocus]]">
                    <include content="$PARAM[hidden_button]">
                        <param name="id">$PARAM[id]</param>
                        <param name="prefix">$PARAM[hidden_button_prefix]</param>
                        <param name="force_widget">$PARAM[hidden_button_force_widget]</param>
                    </include>
                    <control type="group">
                        <left>$PARAM[offset_x]</left>
                        <right>-$PARAM[offset_x]</right>
                        <control type="group">
                            <right>40</right>
                            <height>40</height>
                            <centertop>50%</centertop>
                            <control type="group">
                                <centertop>50%</centertop>
                                <height>256</height>
                                <left>-60</left>
                                <right>-60</right>
                                <control type="image">
                                    <include>Texture_MainMenu_Highlight_H</include>
                                </control>
                            </control>
                            <control type="label">
                                <height>35</height>
                                <aligny>center</aligny>
                                <textoffsetx>0</textoffsetx>
                                <align>center</align>
                                <font>$PARAM[font]</font>
                                <textcolor>$VAR[ColorSelected]</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                                <animation effect="fadediffuse" start="FFFFFFFF" end="FFFF0000" condition="String.IsEqual(ListItem.Property(disabled),True)">Conditional</animation>
                            </control>

                            <control type="group">
                                <visible>Window.IsVisible(1115)</visible>
                                <control type="image">
                                    <centerleft>-30</centerleft>
                                    <width>40</width>
                                    <aspectratio>keep</aspectratio>
                                    <texture colordiffuse="main_fg_30">special://skin/extras/icons/angle-left.png</texture>
                                    <visible>[Container($PARAM[id]).Position(0) + Container($PARAM[id]).HasPrevious] | [Container($PARAM[id]).Position(1) + !Integer.IsEqual(Container($PARAM[id]).NumItems,1)] | [Container($PARAM[id]).Position(2) + True]</visible>
                                </control>
                                <control type="image">
                                    <centerright>-30</centerright>
                                    <width>40</width>
                                    <aspectratio>keep</aspectratio>
                                    <texture colordiffuse="main_fg_30">special://skin/extras/icons/angle-right.png</texture>

                                    <visible>[Container($PARAM[id]).Position(0) + !Integer.IsEqual(Container($PARAM[id]).NumItems,1)] | [Container($PARAM[id]).Position(1) + Integer.IsGreater(Container($PARAM[id]).NumItems,2)] | [Container($PARAM[id]).Position(2) + False]</visible>
                                </control>
                            </control>

                        </control>
                    </control>
                </focusedlayout>
            </control>
        </definition>
    </include>

