                <param name="itemlayout_include">Layout_Poster</param>

                <param name="focusedlayout_special">true</param>
                <param name="offset_y">$PARAM[offset_y]</param>
                <param name="offset_x">$PARAM[offset_x]</param>
                <param name="detailed">$PARAM[detailed]</param>

                <param name="hidden_button_enabled">$PARAM[hidden_button_enabled]</param>
                <param name="hidden_button">$PARAM[hidden_button]</param>
                <nested />
                <focusedlayout width="$PARAM[itemlayout_w]" height="$PARAM[itemlayout_h]">
                    <include condition="$PARAM[hidden_button_enabled]" content="$PARAM[hidden_button]">
                        <param name="id">$PARAM[id]</param>
                    </include>
                    <control type="group">
                        <left>$PARAM[offset_x]</left>
                        <right>-$PARAM[offset_x]</right>
                        <top>$PARAM[offset_y]</top>
                        <bottom>-$PARAM[offset_y]</bottom>
                        <control type="group">
                            <animation effect="fade" start="100" end="0" condition="[Control.HasFocus($PARAM[id]) | $PARAM[altfocus]]">Conditional</animation>
                            <include content="$PARAM[itemlayout_include]">
                                <param name="selected">false</param>
                                <param name="item_w">$PARAM[item_w]</param>
                                <param name="item_h">$PARAM[item_h]</param>
                                <param name="misc">$PARAM[misc]</param>
                                <param name="id">$PARAM[id]</param>
                                <param name="detailed">$PARAM[detailed]</param>
                                <param name="indicator">$PARAM[indicator]</param>
                                <param name="variation">$PARAM[variation]</param>
                                <param name="diffuse">$PARAM[diffuse]</param>
                                <param name="icon">$PARAM[icon]</param>
                                <param name="textcolor">$PARAM[textcolor]</param>
                                <param name="shadow_colordiffuse">$PARAM[shadow_colordiffuse]</param>
                            </include>
                        </control>
                        <control type="group">
                            <animation effect="fade" start="100" end="0" condition="![Control.HasFocus($PARAM[id]) | $PARAM[altfocus]]">Conditional</animation>
                            <include content="$PARAM[itemlayout_include]">
                                <param name="selected">true</param>
                                <param name="item_w">$PARAM[item_w]</param>
                                <param name="item_h">$PARAM[item_h]</param>
                                <param name="misc">$PARAM[misc]</param>
                                <param name="id">$PARAM[id]</param>
                                <param name="detailed">$PARAM[detailed]</param>
                                <param name="indicator">$PARAM[indicator]</param>
                                <param name="variation">$PARAM[variation]</param>
                                <param name="diffuse">$PARAM[diffuse]</param>
                                <param name="icon">$PARAM[icon]</param>
                                <param name="textcolor">$PARAM[textcolor]</param>
                                <param name="shadow_colordiffuse">$PARAM[shadow_colordiffuse]</param>
                            </include>
                        </control>
                    </control>
                </focusedlayout>
            </include>
        </definition>
    </include>

