    <include name="Action_Widget_Top">
        <param name="bump">true</param>
        <param name="condition">Window.IsVisible(Home) + Skin.HasSetting(Hub.Home.DisableSubmenu) + !String.IsEmpty(Container(303).ListItemNoWrap(-1).Property(guid))</param>
        <definition>

            <!-- Scroll classic home -->
            <onup condition="$PARAM[condition] + !Skin.HasSetting(Hubs.WidgetSelector)">$INFO[Container(303).ListItem(-1).Property(widgets_setfocus_bottom)]</onup>
            <onup condition="$PARAM[condition] + Skin.HasSetting(Hubs.WidgetSelector)">$INFO[Container(303).ListItem(-1).Property(widgets_setfocus_top)]</onup>
            <onup condition="$PARAM[condition]">SetProperty(WidgetGroup.Movement,Up)</onup>
            <onup condition="$PARAM[condition]">Control.Move(303,-1)</onup>

            <!-- Go to search -->
            <onup condition="![$PARAM[condition]] + $PARAM[bump] + Skin.String(Navigation.OnUp,Search)">ActivateWindow(1105)</onup>

            <!-- Bump -->
            <onup condition="![$PARAM[condition]] + $PARAM[bump] + !Skin.String(Navigation.OnUp,Search)">SetProperty(List.ViewContainer,$NUMBER[$PARAM[id]])</onup>
            <onup condition="![$PARAM[condition]] + $PARAM[bump] + !Skin.String(Navigation.OnUp,Search)">333</onup>
        </definition>
    </include>

    <include name="Action_Widget_End">
        <param name="bump">true</param>
        <param name="condition">Window.IsVisible(Home) + Skin.HasSetting(Hub.Home.DisableSubmenu) + !String.IsEmpty(Container(303).ListItemNoWrap(1).Property(guid))</param>
        <definition>


            <!-- EndRow Hack: Bump focus back up to widget first -->
            <ondown condition="!String.IsEmpty(Window.Property(EndRow.HasFocus))">Action(Up)</ondown>

            <!-- Scroll Classic Home -->
            <ondown condition="$PARAM[condition] + !Skin.HasSetting(Hubs.WidgetSelector)">$INFO[Container(303).ListItem(1).Property(widgets_setfocus_top)]</ondown>
            <ondown condition="$PARAM[condition] + Skin.HasSetting(Hubs.WidgetSelector)">$INFO[Container(303).ListItem(1).Property(widgets_setfocus_bottom)]</ondown>
            <ondown condition="$PARAM[condition]">SetProperty(WidgetGroup.Movement,Down)</ondown>
            <ondown condition="$PARAM[condition]">Control.Move(303,1)</ondown>

            <!-- Go to Recs -->
            <include content="Action_View_Explore_OnDown">
                <param name="condition">[![$PARAM[condition]] + $PARAM[bump] + Skin.String(Navigation.OnDown,Explore)]</param>
            </include>

            <!-- Bump -->
            <ondown condition="![$PARAM[condition]] + $PARAM[bump] + !Skin.String(Navigation.OnDown,Explore)">SetProperty(List.ViewContainer,$NUMBER[$PARAM[id]])</ondown>
            <ondown condition="![$PARAM[condition]] + $PARAM[bump] + !Skin.String(Navigation.OnDown,Explore)">330</ondown>
        </definition>
    </include>

