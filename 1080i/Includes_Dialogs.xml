<includes>

    <include name="Dialog_Background_Toast">
        <param name="overlay_visible">true</param>
        <param name="overlay_height">120</param>
        <param name="diffuse">diffuse/landscape_w480_h270.png</param>
        <definition>
            <control type="group">
                <include content="Dialog_Background_Blur">
                    <param name="flipy">true</param>
                    <param name="aspectratio">scale</param>
                    <param name="diffuse">$PARAM[diffuse]</param>
                    <param name="border">0</param>
                </include>
                <control type="image">
                    <texture colordiffuse="dialog_fg_12" border="20">common/dialog.png</texture>
                </control>
                <control type="image">
                    <height>$PARAM[overlay_height]</height>
                    <texture colordiffuse="dialog_fg_12" border="20" flipy="true">common/dialog_overlay_v.png</texture>
                    <visible>$PARAM[overlay_visible]</visible>
                </control>
                <nested />
            </control>
        </definition>
    </include>

    <include name="Dialog_Background_Toast_Nib">
        <control type="image">
            <top>-15</top>
            <height>16</height>
            <width>16</width>
            <texture colordiffuse="ff55555f" flipy="false">arrows/arrow-menu-up.png</texture>
            <nested />
        </control>
    </include>

    <include name="Dialog_Background_Toast_Nib_Left">
        <control type="image">
