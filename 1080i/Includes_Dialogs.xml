                                <include content="Dimension_Padding">
                                    <param name="pad">5</param>
                                </include>
                            </control>
                            <control type="image">
                                <texture border="20" colordiffuse="black">common/selectbox.png</texture>
                            </control>
                        </control>
                    </include>

                    <control type="group">
                        <left>10</left>
                        <right>10</right>
                        <height>80</height>
                        <bottom>10</bottom>
