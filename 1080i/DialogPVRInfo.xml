<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol always="true">9000</defaultcontrol>
    <menucontrol>9000</menucontrol>
    <include>DialogInfo_Onload</include>
    <zorder>4</zorder>
    <controls>

        <control type="group">
            <include>Dimension_DialogWideMenu</include>
            <include>Animation_Right_Delay</include>
            <include content="Dialog_Dim_Side">
                <param name="slide_condition">ControlGroup(9000).HasFocus()</param>
            </include>

            <!-- Bottom Layer -->
            <include content="Dialog_Background_Group">
                <param name="dialog_size">Dimension_DialogWideMenu</param>
            </include>

            <!-- Side Buttons -->
            <include content="Dialog_Body">
                <include content="Dialog_Side_Grouplist">
                    <param name="id">9000</param>
                    <onleft>Close</onleft>
                    <onright>Close</onright>
                    <include content="Dialog_Side_Button">
                        <param name="id">01</param>
                        <param name="label">$LOCALIZE[15067]</param>
                        <param name="icon">special://skin/extras/icons/circle-xmark.png</param>
                        <onclick>Close</onclick>
                    </include>
                    <include>Items_DialogPVRInfo_MenuBar</include>
                </include>
            </include>

            <include content="Dialog_Foreground_Side">
                <param name="dialog_size">Dimension_DialogWideMenu</param>
                <param name="slide_condition">ControlGroup(9000).HasFocus()</param>
                <param name="lines_right">0</param>
                <param name="topline">true</param>
                <param name="subline">true</param>

                <!-- Header -->
                <include content="Dialog_Head">
                    <param name="label">$VAR[Label_Title]</param>
                </include>

                <!-- Content -->
                <include content="Dialog_Body">
                    <include content="Dialog_Body_Group">
                        <control type="textbox">
                            <font>font_main_plot</font>
                            <textcolor>main_fg_70</textcolor>
                            <label>[B][COLOR=main_fg_90]$LOCALIZE[31181][/COLOR][/B][CR]$INFO[ListItem.StartDate,,[CR]]$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]$INFO[ListItem.Genre,[CR][CR][B][COLOR=main_fg_90]$LOCALIZE[515][/COLOR][/B][CR],][CR][CR]$INFO[ListItem.Plot,[B][COLOR=main_fg_90]$LOCALIZE[31028][/COLOR][/B][CR],]</label>
                            <include content="Dimension_Padding">
                                <param name="pad">20</param>
                            </include>
                        </control>
                    </include>
                </include>
            </include>

        </control>
    </controls>
</window>
