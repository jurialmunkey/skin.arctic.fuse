<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <include>Animation_SlideIn_Dialog</include>
    <controls>

        <include content="Furniture_Busy">
            <param name="hasprogress">true</param>
            <param name="mainlabel_id">30</param>
            <param name="minilabel">$INFO[Control.GetLabel(31)]$INFO[Control.GetLabel(32), - ,%]</param>
            <param name="progress">Control.GetLabel(32)</param>
            <param name="progress_id">32</param>
            <param name="icon">special://skin/extras/icons/kodi.png</param>
            <param name="spinnervisible">Skin.HasSetting(ToastNotifications.Tabbed) | [[!Window.IsActive(DialogVolumeBar.xml) | Player.Muted] + !Window.IsActive(DialogBusy.xml)]</param>
            <include condition="!Skin.HasSetting(ToastNotifications.Tabbed)">Dimension_FurnitureBusy_Mini</include>
            <visible>!Window.IsActive(DialogNotification.xml)</visible>
            <visible>!Window.IsActive(fullscreenvideo)</visible>
            <visible>!Window.IsActive(visualisation)</visible>
        </include>

        <control type="label" id="31">
            <left>-2000</left>
            <width>100</width>
            <visible>False</visible>
        </control>

        <control type="progress" id="32">
            <left>-2000</left>
            <width>100</width>
            <height>1</height>
            <info>Player.Progress</info>
        </control>
    </controls>
</window>
