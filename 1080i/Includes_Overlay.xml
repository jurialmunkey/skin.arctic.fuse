<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="Vert_Red_Line">
        <control type="image">
            <top>-1</top>
            <height>1</height>
            <texture colordiffuse="44ff0000">common/white.png</texture>
        </control>
    </include>

    <include name="Vert_Red_Line_5">
        <include>Vert_Red_Line</include>
        <include>Vert_Red_Line</include>
        <include>Vert_Red_Line</include>
        <include>Vert_Red_Line</include>
        <include>Vert_Red_Line</include>
    </include>

    <include name="Horz_Red_Line">
        <control type="image">
            <left>-1</left>
            <width>1</width>
            <texture colordiffuse="44ff0000">common/white.png</texture>
        </control>
    </include>

    <include name="Horz_Red_Line_5">
        <include>Horz_Red_Line</include>
        <include>Horz_Red_Line</include>
        <include>Horz_Red_Line</include>
        <include>Horz_Red_Line</include>
        <include>Horz_Red_Line</include>
    </include>

    <variable name="Overlay_InfoLabel_WidgetContainer">
        <value condition="Window.IsVisible(1120)">$INFO[Window(1120).Property(TMDBHelper.WidgetContainer)]$INFO[Window(1120).Property(Slide.WidgetContainer), (,)]</value>
        <value condition="Window.IsVisible(1121)">$INFO[Window(1121).Property(TMDBHelper.WidgetContainer)]$INFO[Window(1121).Property(Slide.WidgetContainer), (,)]</value>
        <value condition="Window.IsVisible(musicinformation)">$INFO[Window(musicinformation).Property(TMDBHelper.WidgetContainer)]$INFO[Window(musicinformation).Property(Slide.WidgetContainer), (,)]</value>
        <value condition="Window.IsVisible(movieinformation)">$INFO[Window(movieinformation).Property(TMDBHelper.WidgetContainer)]$INFO[Window(movieinformation).Property(Slide.WidgetContainer), (,)]</value>
        <value condition="Window.IsVisible(Home)">$INFO[Window(Home).Property(TMDBHelper.WidgetContainer)]$INFO[Window(Home).Property(Slide.WidgetContainer), (,)]</value>
        <value condition="Window.IsVisible(1101)">$INFO[Window(1101).Property(TMDBHelper.WidgetContainer)]$INFO[Window(1101).Property(Slide.WidgetContainer), (,)]</value>
        <value condition="Window.IsVisible(1102)">$INFO[Window(1102).Property(TMDBHelper.WidgetContainer)]$INFO[Window(1102).Property(Slide.WidgetContainer), (,)]</value>
        <value condition="Window.IsVisible(1103)">$INFO[Window(1103).Property(TMDBHelper.WidgetContainer)]$INFO[Window(1103).Property(Slide.WidgetContainer), (,)]</value>
        <value condition="Window.IsVisible(1104)">$INFO[Window(1104).Property(TMDBHelper.WidgetContainer)]$INFO[Window(1104).Property(Slide.WidgetContainer), (,)]</value>
        <value condition="Window.IsVisible(1105)">$INFO[Window(1105).Property(TMDBHelper.WidgetContainer)]$INFO[Window(1105).Property(Slide.WidgetContainer), (,)]</value>
        <value condition="Window.IsVisible(videos)">$INFO[Window(videos).Property(TMDBHelper.WidgetContainer)]$INFO[Window(videos).Property(Slide.WidgetContainer), (,)]</value>
        <value condition="Window.IsVisible(music)">$INFO[Window(music).Property(TMDBHelper.WidgetContainer)]$INFO[Window(music).Property(Slide.WidgetContainer), (,)]</value>
    </variable>


    <include name="Overlay_InfoLabel">
        <definition>
            <control type="button" id="$PARAM[id]">
                <nested />
                <texturenofocus colordiffuse="panel_bg_70">common/white.png</texturenofocus>
                <textoffsetx>0</textoffsetx>
                <aligny>center</aligny>
                <height>40</height>
                <font>font_debug</font>
                <align>left</align>
                <textcolor>magenta</textcolor>
                <width>auto</width>
            </control>
        </definition>
    </include>

    <include name="Overlay_DebugGrid">
        <control type="group">

            <!-- Vertical 40 px lines -->
            <control type="grouplist">
                <itemgap>40</itemgap>
                <orientation>vertical</orientation>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line</include>
                <include>Vert_Red_Line</include>
            </control>

            <!-- Horizontal 40 px lines -->
            <control type="grouplist">
                <itemgap>40</itemgap>
                <orientation>horizontal</orientation>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line</include>
                <include>Horz_Red_Line</include>
                <include>Horz_Red_Line</include>
            </control>

            <!-- Screen Padding Lines -->
            <control type="image">
                <top>80</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>80</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <left>80</left>
                <width>1</width>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <right>80</right>
                <width>1</width>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- Outer Border Lines -->
            <control type="image">
                <top>120</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>120</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <left>120</left>
                <width>1</width>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- Inner Border Lines -->
            <control type="image">
                <top>view_top</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>view_top</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <left>view_side</left>
                <width>1</width>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- View Border Lines -->
            <control type="image">
                <top>520</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>520</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- Trough Lines -->
            <control type="group">
                <height>view_top</height>
                <control type="group">
                    <centertop>50%</centertop>
                    <height>view_bar</height>
                    <control type="image">
                        <top>-10</top>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                    <control type="image">
                        <bottom>-10</bottom>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                </control>
            </control>
            <control type="group">
                <bottom>0</bottom>
                <height>view_top</height>
                <control type="group">
                    <centertop>50%</centertop>
                    <height>view_bar</height>
                    <control type="image">
                        <top>-10</top>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                    <control type="image">
                        <bottom>-10</bottom>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                </control>
            </control>
            <control type="group">
                <left>0</left>
                <width>view_side</width>
                <control type="group">
                    <centerleft>50%</centerleft>
                    <width>view_bar</width>
                    <control type="image">
                        <right>-10</right>
                        <width>1</width>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                    <control type="image">
                        <left>-10</left>
                        <width>1</width>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                </control>
            </control>

            <!-- Center Lines -->
            <control type="image">
                <centertop>50%</centertop>
                <height>1</height>
                <texture colordiffuse="blue">common/white.png</texture>
            </control>
            <control type="image">
                <centerleft>50%</centerleft>
                <width>1</width>
                <texture colordiffuse="blue">common/white.png</texture>
            </control>
            <control type="group">
                <left>view_side</left>
                <right>view_pad</right>
                <control type="image">
                    <centerleft>50%</centerleft>
                    <width>1</width>
                    <texture colordiffuse="green">common/white.png</texture>
                </control>
            </control>

        </control>
    </include>

    <include name="Overlay_DebugInfo">
        <control type="group">
            <control type="grouplist">
                <align>top</align>
                <orientation>vertical</orientation>
                <include content="Overlay_InfoLabel">
                    <label> --system.currentcontrolid: $INFO[System.CurrentControlID,, | ]$INFO[System.CurrentControl,, | ]$INFO[System.CurrentWindow]</label>
                    <textcolor>yellowgreen</textcolor>
                </include>
                <include content="Overlay_InfoLabel">
                    <label>   --tmdbhelper.windowmanager: $INFO[Window(Home).Property(TMDbHelper.Instance),instance: , ]$INFO[Window(Home).Property(TMDBHelper.Position),position: , ]$INFO[Window(Home).Property(Transition.WidgetStyle),transition_widget: , ]</label>
                    <textcolor>yellowgreen</textcolor>
                </include>
                <include content="Overlay_InfoLabel">
                    <label>   --tmdbhelper.isupdating: $VAR[Overlay_InfoLabel_WidgetContainer,widget: , ]$INFO[Window(Home).Property(TMDBHelper.CurrentWindow),window: , ]$INFO[Window(Home).Property(TMDBHelper.IsUpdating),details: , ]$INFO[Window(Home).Property(TMDBHelper.IsUpdatingRatings),ratings: , ]</label>
                    <textcolor>yellowgreen</textcolor>
                </include>
            </control>
            <control type="grouplist">
                <align>bottom</align>
                <orientation>vertical</orientation>
                <include content="Overlay_InfoLabel">
                    <label>       --content.dbtype:$INFO[Container.Content, container: , |]$INFO[ListItem.DBType, listitem: ,]$INFO[ListItem.Property(tmdb_type), (,)]$INFO[Container(99950).ListItem.DBType, | TMDbHelper: , ]$INFO[Container(99950).ListItem.Property(TMDB_Type),(,)]$INFO[Container(55).ListItem.Property(param.info)]</label>
                    <textcolor>cyan</textcolor>
                </include>
                <include content="Overlay_InfoLabel">
                    <label> --container.folderpath: $INFO[Container.FolderPath] </label>
                    <textcolor>magenta</textcolor>
                </include>
                <include content="Overlay_InfoLabel">
                    <label>  --listitem.folderpath: $INFO[ListItem.FolderPath] </label>
                    <textcolor>blueviolet</textcolor>
                </include>
            </control>
        </control>
    </include>
</includes>