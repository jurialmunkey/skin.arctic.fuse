{
    "submenu_item_x": [
        {
            "condition": "{item_global_widgets}==True",
            "value": "99"
        },
        "{item_x}"
    ],
    "submenu_ondown": "$MATH[{submenu_item_x} * 1000 + 601]",
    "submenu_path": "{item_submenulist_path}",
    "submenu_target": "{item_submenulist_target}",
    "submenu_limit": "{item_submenulist_limit}",
    "submenu_sortby": "{item_submenulist_sortby}",
    "submenu_sortorder": [
        {
            "condition": "{item_submenulist_sortorder}==True",
            "value" : "descending"
        },
        "ascending"
    ],
    "submenu_sort_descending": [
        {
            "condition":"{item_submenulist_sortorder}==True",
            "value" : "True"
        },
        "False"
    ]
}